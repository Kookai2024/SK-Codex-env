// tsconfig.json: TypeScript 컴파일러 설정이며 초보자는 include 항목을 참고해 필요한 디렉터리를 추가하세요.
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": [
    "auth/**/*.ts",
    "attendance/**/*.ts",
    "todos/**/*.ts",
    "projects/**/*.ts",
    "dashboard/**/*.ts",
    "reports/**/*.ts",
    "packages/server/scripts/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "web"
  ]
}
